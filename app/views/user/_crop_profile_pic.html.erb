<div
x-show="isCropperModalOpen"
x-cloak
@keydown.escape.window="isCropperModalOpen = false"
class="fixed inset-0 z-[60] overflow-y-auto" aria-labelledby="cropper-modal-title"
role="dialog"
aria-modal="true">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div
    x-show="isCropperModalOpen"
    x-transition:enter="ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    @click="isCropperModalOpen = false"
    class="fixed inset-0 bg-gray-700 bg-opacity-75 transition-opacity" aria-hidden="true">
    </div>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
    <div
    x-show="isCropperModalOpen"
    x-transition:enter="ease-out duration-300"
    x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
    x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
    x-transition:leave="ease-in duration-200"
    x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
    x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
    class="inline-block align-bottom bg-[var(--background-clr-clear)] rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-md sm:w-full">
      <div class="bg-[var(--background-clr-clear)] px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
            <h3 class="text-lg leading-6 font-medium text-[var(--txt-clr-strong)] mb-4" id="cropper-modal-title">
              Crop Your Image
            </h3>
            <div class="img-container">
              <img id="preview_image" src="" alt="Image to crop">
            </div>
            <p class="text-xs text-[var(--txt-clr-subtle)] text-center mb-2">Adjust the selection to crop your image.</p>
          </div>
        </div>
      </div>
      <div class="bg-[var(--background-clr-body)] px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
        <button
        id="upload_cropped_image_button"
        @click="isCropperModalOpen = false;"
        type="button"
        class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-[var(--primary-600)] text-base font-medium text-[var(--txt-clr-inverted)] hover:bg-[var(--primary-700)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--primary-500)] sm:ml-3 sm:w-auto sm:text-sm">
          Crop & Save
        </button>
        <button
          @click="isCropperModalOpen = false; imageToCrop = '';"
          type="button"
          class="mt-3 w-full inline-flex justify-center rounded-md border border-[var(--border-clr-default)] shadow-sm px-4 py-2 bg-[var(--background-clr-clear)] text-base font-medium text-[var(--txt-clr-default)] hover:bg-[var(--background-clr-body)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--secondary-500)] sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>