<div data-controller="user--profile" id="profile_component" x-data="{ 
activeTab: 'posts', 
isEditModalOpen: false, 
bio: `<%= @user.bio %>`, 
displayName: '<%= @user.display_name %>', 
displayNameError: false, 
isCropperModalOpen: false, 
connection_activeTab: 'following', 
profilePresent: <%= @user.profile_picture.attached? %>,
hasIncomingRequest: <%= current_user.friend_request?(@user) %>
}"
x-init="footer_active_tab = 'profile'">
  <div class="bg-gradient-to-r from-[var(--primary-500)] to-[var(--secondary-600)] h-32 sm:h-40">
  </div>
  <div class="bg-[var(--background-clr-clear)] shadow-sm pb-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="-mt-12 sm:-mt-16 flex flex-col sm:flex-row sm:items-end sm:space-x-5">
        <div class="flex-shrink-0">
          <span class="h-24 w-24 sm:h-32 sm:w-32 overflow-hidden rounded-full bg-[var(--background-clr-strong)] border-4 flex items-center justify-center">
            <% if @user.profile_picture.attached? %>
              <%= image_tag url_for(@user.profile_picture) %>
            <% else %>
              <%= icon(icon: :user_icon, options:{class: "text-[var(--txt-clr-subtle)] text-5xl sm:text-6xl"} ) %>
            <% end %>
          </span>
        </div>
        <div class="mt-3 md:mt-0 md:pt-12 flex-grow flex flex-col items-start md:flex-row md:items-baseline md:justify-between">
          <div class="mb-3 md:mb-0 w-full min-w-0">
            <h1 class="text-2xl md:text-3xl font-bold text-[var(--txt-clr-strong)] truncate"><%= @user.display_name %></h1>
            <p class="text-sm font-medium text-[var(--txt-clr-subtle)] truncate">k/<%= @user.username %></p>
            <p class="mt-2 text-sm text-[var(--txt-clr-default)] line-clamp-3"><%= @user.bio %></p>
            <div class="mt-3 flex items-center space-x-4 text-sm text-[var(--txt-clr-muted)] md:hidden">
              <a href="/friends-page-link?tab=followers" class="hover:underline">
                <span class="font-semibold text-[var(--txt-clr-thick)] followers_count_<%= @user.id %>"><%= number_to_k(@user.all_followers.count) %></span> Followers
              </a>
              <a href="/friends-page-link?tab=following" class="hover:underline">
                <span class="font-semibold text-[var(--txt-clr-thick)] following_count_<%= @user.id %>"><%= number_to_k(@user.all_following.count) %></span> Following
              </a>
            </div>
          </div>
          <% if @user.id == current_user.id %>
            <button type="button" 
            @click="isEditModalOpen = true" 
            class="inline-flex items-center px-4 py-2 border border-[var(--border-clr-default)] shadow-sm text-sm font-medium rounded-full text-[var(--txt-clr-default)] bg-[var(--background-clr-clear)] hover:bg-[var(--background-clr-body)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--primary-500)] transition duration-150 ease-in-out flex-shrink-0">
              <%= icon(icon: :pen_to_square_icon, options:{class: "mr-1.5"}) %> Edit Profile
            </button>
          <% end %>
        </div>
      </div>
      <div class="md:hidden">
        <div class="mt-4 flex space-x-2">
          <% if @user.id != current_user.id %>
            <%= render partial: "shared/helpers/follow_request_button", locals:{user: @user} %>
          <% end %>
          <button class="flex-1 bg-[var(--background-clr-thick)] hover:bg-[var(--background-clr-strong)] text-[var(--txt-clr-default)] text-sm font-bold py-2 px-4 rounded-full transition duration-150 ease-in-out border border-[var(--border-clr-default)]">
            <i class="fa-regular fa-comment-dots"></i>
            <span>Chat</span>
          </button>
        </div>
      </div>
    </div>
  </div>
  <%= render partial: "incoming_request_tab", locals:{user: @user} %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="md:col-span-2 space-y-4">
        <div class="border-b border-[var(--border-clr-subtle)] bg-[var(--background-clr-clear)] rounded-t-md shadow-sm">
          <nav class="-mb-px flex justify-around sm:justify-start sm:space-x-8 px-0 sm:px-6" aria-label="Tabs">
            <button @click="activeTab = 'posts'" 
            :class="{ 'border-[var(--primary-500)] text-[var(--primary-600)]': activeTab === 'posts', 'border-transparent text-[var(--txt-clr-subtle)] hover:text-[var(--txt-clr-default)] hover:border-[var(--border-clr-default)]': activeTab !== 'posts' }" 
            class="flex-1 sm:flex-none whitespace-nowrap py-3 px-1 sm:px-1 border-b-2 font-medium text-sm transition-colors duration-150 ease-in-out focus:outline-none flex items-center justify-center">
              <i class="fa-solid fa-list-alt sm:mr-2"></i>
              <span class="hidden sm:inline">Posts (<%= @user.posts.count %>)</span>
            </button>
            <% if @user.id == current_user.id %>
              <button @click="activeTab = 'saved'" 
            :class="{ 'border-[var(--primary-500)] text-[var(--primary-600)]': activeTab === 'saved', 'border-transparent text-[var(--txt-clr-subtle)] hover:text-[var(--txt-clr-default)] hover:border-[var(--border-clr-default)]': activeTab !== 'saved' }" 
            class="flex-1 sm:flex-none whitespace-nowrap py-3 px-1 sm:px-1 border-b-2 font-medium text-sm transition-colors duration-150 ease-in-out focus:outline-none flex items-center justify-center">
                <i class="fa-regular fa-bookmark sm:mr-2"></i>
                <span class="hidden sm:inline">Saved</span>
              </button>
            <% end %>
            <button @click="activeTab = 'friends'" 
            :class="{ 'border-[var(--primary-500)] text-[var(--primary-600)]': activeTab === 'friends', 'border-transparent text-[var(--txt-clr-subtle)] hover:text-[var(--txt-clr-default)] hover:border-[var(--border-clr-default)]': activeTab !== 'friends' }" 
            class="flex-1 sm:flex-none whitespace-nowrap py-3 px-1 sm:px-1 border-b-2 font-medium text-sm transition-colors duration-150 ease-in-out focus:outline-none flex items-center justify-center">
              <i class="fa-solid fa-user-group sm:mr-2"></i>
              <span class="hidden sm:inline">Friends</span>
            </button>
          </nav>
        </div>
        <div class="space-y-4">
          <div id="user_posts_<%= @user.id %>" x-show="activeTab === 'posts'" x-cloak class="space-y-4">
            <%= render partial:"posts", locals:{user: @user} %>
          </div>
          <div x-show="activeTab === 'saved'" x-cloak class="space-y-4">
            <div class="bg-[var(--background-clr-clear)] rounded-b-md shadow-sm text-center p-12">
              <%= icon(icon: :save_icon, options:{class:"fa-3x text-[var(--txt-clr-muted)]"}) %>
              <p class="mt-4 text-sm font-medium text-[var(--txt-clr-subtle)]">You haven't saved any posts yet.</p>
              <p class="text-xs text-[var(--txt-clr-lite)] mt-1">Saved posts will appear here.</p>
            </div>
          </div>
          <div x-show="activeTab === 'friends'" x-cloak class="space-y-4">
            <%= render partial:"shared/connections", locals:{user: @user} %>
          </div>
        </div>
      </div>
      <div class="hidden md:block space-y-4">
        <div class="bg-[var(--background-clr-clear)] p-4 rounded-md shadow">
          <h4 class="font-semibold mb-3 border-b pb-2 text-[var(--txt-clr-thick)]"><%= @user.username %></h4>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="font-medium text-[var(--txt-clr-muted)]">Following</span>
              <span class="font-semibold text-[var(--txt-clr-thick)] following_count_<%= @user.id %>"><%= number_to_k(@user.all_following.count) %></span>
            </div>
            <div class="flex justify-between border-b pb-3">
              <span class="font-medium text-[var(--txt-clr-muted)]">Followers</span>
              <span class="font-semibold text-[var(--txt-clr-thick)] followers_count_<%= @user.id %>"><%= number_to_k(@user.all_followers.count) %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-[var(--txt-clr-muted)]">Post Karma</span>
              <span class="font-semibold text-[var(--txt-clr-thick)]"><%= number_to_k(@user.posts.count) %></span>
            </div>
            <div class="flex justify-between">
              <span class="font-medium text-[var(--txt-clr-muted)]">Comment Karma</span>
              <span class="font-semibold text-[var(--txt-clr-thick)]"><%= number_to_k(@user.comments.count) %></span>
            </div>
            <div class="flex justify-between items-center mt-3 pt-3 border-t">
              <span class="font-medium text-[var(--txt-clr-muted)]">Cake day</span>
              <span class="font-semibold text-[var(--txt-clr-thick)] flex items-center">
                <%= icon(icon: :cake_candles_icon, options:{class: "text-[var(--primary-600)] mr-1.5"}) %>
                <%= @user.dob.strftime("%B %d, %Y") %>
              </span>
            </div>
          </div>
          <div class="mt-4 flex space-x-2">
            <% if @user.id != current_user.id %>
              <%= render partial: "shared/helpers/follow_request_button", locals:{user: @user} %>
            <% end %>
            <button class="flex-1 bg-[var(--background-clr-thick)] hover:bg-[var(--background-clr-strong)] text-[var(--txt-clr-default)] text-sm font-bold py-2 px-4 rounded-full transition duration-150 ease-in-out border border-[var(--border-clr-default)]">
              <i class="fa-regular fa-comment-dots"></i>
              <span>Chat</span>
            </button>
          </div>
        </div>
        <div class="bg-[var(--background-clr-clear)] p-4 rounded-md shadow">
          <h4 class="font-semibold mb-3 text-[var(--txt-clr-thick)]">Communities</h4>
          <ul class="space-y-3">
            <li class="flex items-center space-x-3">
              <span class="h-6 w-6 rounded-full bg-blue-500 flex items-center justify-center">
                <i class="fa-solid fa-users text-[var(--txt-clr-inverted)] text-xs"></i>
              </span>
              <a href="#" class="text-sm font-medium text-[var(--txt-clr-default)] hover:text-[var(--primary-600)] hover:underline">k/someCommunity</a>
            </li>
            <li class="flex items-center space-x-3">
              <span class="h-6 w-6 rounded-full bg-green-500 flex items-center justify-center">
                <i class="fa-solid fa-leaf text-[var(--txt-clr-inverted)] text-xs"></i>
              </span>
              <a href="#" class="text-sm font-medium text-[var(--txt-clr-default)] hover:text-[var(--primary-600)] hover:underline">k/anotherCommunity</a>
            </li>
            <li class="flex items-center space-x-3">
              <span class="h-6 w-6 rounded-full bg-red-500 flex items-center justify-center">
                <i class="fa-solid fa-camera text-[var(--txt-clr-inverted)] text-xs"></i>
              </span>
              <a href="#" class="text-sm font-medium text-[var(--txt-clr-default)] hover:text-[var(--primary-600)] hover:underline">k/pics</a>
            </li>
          </ul>
          <a href="#" class="mt-3 block text-center text-xs text-[var(--primary-600)] hover:underline">View All</a>
        </div>
      </div>
    </div>
  </div>
  <%= render "edit_profile" %>
  <%= render "crop_profile_pic" %>
</div>