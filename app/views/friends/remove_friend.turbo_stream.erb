<% if send_to.id == from.id  %>
  <%= turbo_stream.replace "connections" do %>
    <%= render partial: "shared/connections", locals:{user: from} %>
  <% end %>
<% else %>
  <turbo-stream action="replace" targets=".<%=to.id%>_follow_button_<%=from.id%>">
    <template>
      <%= render partial: "shared/helpers/follow_request_button", locals:{current_user: to, user: from} %>
    </template>
  </turbo-stream>
  <%= turbo_stream.replace "connections" do %>
    <%= render partial: "shared/connections", locals:{user: to} %>
  <% end %>
<% end %>