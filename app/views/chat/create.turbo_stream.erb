<% if chat.user_id == current_user.id %>
  <%
    ActionCable.server.broadcast(
      "chat_channel_#{current_user.id}",
      { action: "new_chat", chat: chat, current_user_id: current_user.id, group_id: group_id }
    )
  %>
<% else %>
  <%= turbo_stream.remove "empty_chat_window_#{group_id}" %>
  <%
    ActionCable.server.broadcast(
      "chat_channel_#{chat.user_id}",
      { action: "new_chat", chat: chat, current_user_id: current_user.id, group_id: group_id }
    )
  %>
<% end %>
<%= turbo_stream.update "chat_group_list" do %>
  <%= render partial: "chat/chat_group_list", locals:{current_user: current_user} %>
<% end %>