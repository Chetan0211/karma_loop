<% flash.each do |name, message| %>
  <% if name.to_s == "success" %>
    <%= render "shared/success_message", message: message %>
  <% elsif name.to_s == "error" %>
    <%= render "shared/error_message", message: message %>
  <% elsif name.to_s == "alert" %>
    <%= render "shared/alert_message", message: message %>
  <% else %>
    <%= render "shared/notice_message", message: message %>
  <% end %>
<% end %>