<!--
Params to pass here:
post: Model

-->
<% if post.content_type == 'blog' %>
  <%= render partial: "shared/blog_post", locals: {post: post, current_user: current_user} %>
<% elsif post.content_type == 'images' %>
  <%= render partial: "shared/image_post", locals: {post: post, current_user: current_user} %>
<% elsif post.content_type == 'video' %>
  <%= render partial: "shared/video_post", locals: {post: post, current_user: current_user} %>
<% end %>