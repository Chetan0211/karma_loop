<!--
Params to pass here:
post: Model
-->
<div id="reaction_div_parent_<%=post.id%>" class="flex flex-col items-center bg-[var(--background-clr-thick)] p-2 space-y-1 w-10 flex-shrink-0 <%=post.current_user_reaction(current_user.id)%>">
  <div>
    <%= link_to post_post_reaction_path(post_id: post.id, reaction:"like"), 
      id:"like_button_parent_#{post.id}",
      remote: true,
      class: "text-[var(--txt-clr-lite)] hover:text-[var(--primary-600)] rounded-full p-0.5 #{post.current_user_reaction(current_user.id) == 'like' ? "hidden" : ""}",
      data: { turbo_method: "get" } do %>
      <%= icon(icon: :like_icon, options: {class:"fa-fw text-base w-5 h-5"}) %>
    <% end %>
    <%= link_to post_post_reaction_path(post_id: post.id, reaction: nil), 
      id:"like_button_parent_liked_#{post.id}",
      remote: true,
      class: "text-[var(--primary-600)] rounded-full p-0.5 #{post.current_user_reaction(current_user.id) == 'like' ? "" : "hidden"}",
      data: { turbo_method: "get" } do %>
      <%= icon(icon: :like_icon, options: {class:"fa-fw text-base w-5 h-5"}) %>
    <% end %>
  </div>
  <span class="text-xs font-bold text-[var(--txt-clr-thick)]"><%= post.likes - post.dislikes %></span>
  <div>
    <%= link_to post_post_reaction_path(post_id: post.id, reaction:"dislike"), 
      id:"dislike_button_parent_#{post.id}",
      remote: true, 
      class: "text-[var(--txt-clr-lite)] hover:text-[var(--secondary-600)] rounded-full p-0.5 #{post.current_user_reaction(current_user.id) == 'dislike' ? "hidden" : ""}",
      data: { turbo_method: "get" } do %>
      <%= icon(icon: :dislike_icon, options: {class:"fa-fw text-base w-5 h-5"}) %>
    <% end %>
    <%= link_to post_post_reaction_path(post_id: post.id, reaction: nil), 
      id:"dislike_button_parent_disliked_#{post.id}",
      remote: true, 
      class: "text-[var(--secondary-600)] rounded-full p-0.5 #{post.current_user_reaction(current_user.id) == 'dislike' ? "" : "hidden"}",
      data: { turbo_method: "get" } do %>
      <%= icon(icon: :dislike_icon, options: {class:"fa-fw text-base w-5 h-5"}) %>
    <% end %>
  </div>
</div>