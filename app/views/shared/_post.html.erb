<!--
Params to pass here:
post: Model
-->
<% case post.content_type%>
<% when 'blog'%>
  <%= render partial: "shared/blog_post_min", locals: {post: post, current_user: current_user} %>
<% when 'images'%>
  <%= render partial: "shared/image_post_min", locals: {post: post, current_user: current_user} %>
<% when 'video'%>
  <%= render partial: "shared/video_post_min", locals: {post: post, current_user: current_user} %>
<% end %>