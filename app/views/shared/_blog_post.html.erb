<!--
Params to pass here:
post: Model
-->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="md:col-span-2 space-y-4">
      <div class="bg-white rounded-md shadow overflow-hidden">
        <div class="p-3 sm:p-4 flex-grow min-w-0">
          <div class="text-xs text-gray-500 mb-1">
            <!-- We need to add community if we have community else we should not show it-->
            <a href="#" class="font-semibold text-gray-800 hover:underline">k/pics</a>
            <span class="mx-1">â€¢</span>
            <span>Posted by <a href="#" class="hover:underline"><%= post.user.username %></a></span>
            <span><%= post.created_at %></span>
          </div>
          <h1 class="text-xl sm:text-2xl font-semibold text-gray-900 mb-3">
              <%= post.title %>
          </h1>
          <div class="text-sm text-gray-800 max-w-none mb-4">
              <%= post.description %>
          </div>

          <div class="flex items-center space-x-2 sm:space-x-4 text-xs font-medium text-gray-500 border-t border-b py-2 my-4">
            <div id="reaction_div_parent_<%= post.id %>" class="flex items-center space-x-1 p-1 rounded <%= post.current_user_reaction(current_user.id) %>">
              <div>
                <%= link_to post_post_reaction_path(post_id: post.id, reaction:"like"), 
                  id:"like_button_parent_#{post.id}",
                  remote: true,
                  class: "p-1 rounded hover:bg-gray-200 text-gray-500 hover:text-purple-600 #{post.current_user_reaction(current_user.id) == 'like' ? "hidden" : ""}",
                  data: { turbo_method: "get" } do %>
                  <%= icon(icon: :like_icon, options: {class:"fa-fw text-base w-5 h-5"}) %>
                <% end %>
                <%= link_to post_post_reaction_path(post_id: post.id, reaction: nil), 
                  id:"like_button_parent_liked_#{post.id}",
                  remote: true,
                  class: "p-1 rounded hover:bg-gray-200 text-purple-600 #{post.current_user_reaction(current_user.id) == 'like' ? "" : "hidden"}",
                  data: { turbo_method: "get" } do %>
                  <%= icon(icon: :like_icon, options: {class:"fa-fw text-base w-5 h-5"}) %>
                <% end %>
              </div>
              <span class="font-semibold text-gray-700 w-6 text-center"><%= post.likes - post.dislikes %></span>
              <div>
                <%= link_to post_post_reaction_path(post_id: post.id, reaction:"dislike"), 
                  id:"dislike_button_parent_#{post.id}",
                  remote: true, 
                  class: "p-1 rounded hover:bg-gray-200 text-gray-500 hover:text-blue-600 #{post.current_user_reaction(current_user.id) == 'dislike' ? "hidden" : ""}",
                  data: { turbo_method: "get" } do %>
                  <%= icon(icon: :dislike_icon, options: {class:"fa-fw text-base w-5 h-5"}) %>
                <% end %>
                <%= link_to post_post_reaction_path(post_id: post.id, reaction: nil), 
                  id:"dislike_button_parent_disliked_#{post.id}",
                  remote: true, 
                  class: "p-1 rounded hover:bg-gray-200 text-blue-600 #{post.current_user_reaction(current_user.id) == 'dislike' ? "" : "hidden"}",
                  data: { turbo_method: "get" } do %>
                  <%= icon(icon: :dislike_icon, options: {class:"fa-fw text-base w-5 h-5"}) %>
                <% end %>
              </div>
            </div>
            <a href="#comments_head" class="flex items-center space-x-1 hover:bg-gray-100 p-1 rounded">
                <%= icon(icon: :comment_icon, options: {class: "fa-fw text-base" }) %>
                <%= post.comments.count %> Comments</span>
            </a>
            <button class="flex items-center space-x-1 hover:bg-gray-100 p-1 rounded">
                <%= icon(icon: :share_icon, options: {class: "fa-fw text-base" }) %>
                <span class="hidden sm:inline">Share</span>
            </button>
            <button class="flex items-center space-x-1 hover:bg-gray-100 p-1 rounded">
                <%= icon(icon: :save_icon, options: {class: "fa-fw text-base" }) %>
                <span class="hidden sm:inline">Save</span>
            </button>
            <button class="flex items-center space-x-1 hover:bg-gray-100 p-1 rounded ml-auto">
                <%= icon(icon: :ellipsis_icon, options: {class: "fa-fw text-base" }) %>
            </button>
          </div>

          <button id="parent_comment_button", class="bg-purple-600 hover:bg-purple-700 text-white text-sm font-semibold py-2 px-4 rounded-full transition duration-150 ease-in-out mb-2">Add a Comment</button>
          <div id="parent_comment_form" class="mb-6 hidden">
            <p class="text-xs mb-1">Comment as <a href="#" class="text-purple-600 hover:underline">YourUsername</a></p>
            <%= form_with url: post_add_comment_path(post_id: params[:id]), model: [ post, Comment.new ], remote: true do |form| %>
              <%= form.hidden_field :parent_id, value: nil %>
              <%= form.rich_text_area :comment, id:"comment_comment_parent", class: "w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-purple-500 focus:border-purple-500 transition duration-150 ease-in-out text-sm" %>
              <div class="flex justify-end mt-2">
                <button id="cancel_parent_comment_form", class="bg-white hover:bg-grey-100 text-purple-600 hover:text-purple-700 py-2 px-4 transition duration-150 ease-in-out", type="button">Cancel</button>
                <%= form.submit "Post Comment", class: "bg-purple-600 hover:bg-purple-700 text-white text-sm font-semibold py-2 px-4 rounded-full transition duration-150 ease-in-out" %>
              </div>
            <% end %>
          </div>
          <div class="space-y-6">
            <% if post.comments.count > 0 %>
              <h4 id="comments_head"class="text-lg font-semibold border-b pb-2">Comments (<%= post.comments.count %>)</h4>
              <% post.comments.where(parent_id:nil).each do |comment| %>
                <%= render partial: 'shared/comment', locals: { comment: comment, post: post } %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="hidden md:block space-y-4">
      <div class="bg-white p-4 rounded-md shadow">
        <h4 class="font-semibold mb-3 border-b pb-2">About k/pics</h4>
        <p class="text-sm text-gray-600 mb-2">A community for sharing great pictures.</p>
        <div class="flex items-center space-x-4 text-sm text-gray-500 mb-3">
          <span><strong class="text-gray-800">1.2M</strong> Members</span>
          <span><strong class="text-gray-800">5.6k</strong> Online</span>
        </div>
        <p class="text-xs text-gray-500 mb-3">Created Jan 1, 2020</p>
        <button class="w-full bg-purple-100 text-purple-700 border border-purple-300 hover:bg-purple-200 text-sm font-bold py-2 px-4 rounded-full transition duration-150 ease-in-out mb-2">Joined</button>
        <button class="w-full bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm font-bold py-2 px-4 rounded-full transition duration-150 ease-in-out">Create Post</button>
      </div>

      <div class="bg-white p-4 rounded-md shadow top-20">
        <h4 class="font-semibold mb-3 border-b pb-2">k/pics Rules</h4>
          <ol class="list-decimal list-inside space-y-2 text-xs text-gray-600">
            <li>High-quality images only.</li>
            <li>Be respectful in comments.</li>
            <li>No NSFW content.</li>
            <li>Credit the original photographer if known.</li>
        </ol>
      </div>

      <div class="bg-white p-4 rounded-md shadow">
        <h4 class="font-semibold mb-3 border-b pb-2">Trending Topics</h4>
        <ul class="space-y-2 text-sm">
          <li><a href="#" class="text-purple-600 hover:underline">#landscape</a></li>
          <li><a href="#" class="text-purple-600 hover:underline">#photography</a></li>
          <li><a href="#" class="text-purple-600 hover:underline">#nature</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>