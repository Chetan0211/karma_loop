<div class="bg-[var(--background-clr-body)] flex items-center justify-center min-h-screen py-12 px-4 sm:px-6 lg:px-8">
  <div class="bg-[var(--background-clr-clear)] p-8 rounded-lg shadow-md w-full max-w-md space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-[var(--txt-clr-strong)]">
        Forgot Your Password?
      </h2>
      <p class="mt-2 text-center text-sm text-[var(--txt-clr-default)]">
        No problem! Enter your email address below and we'll send you a link to reset it.
      </p>
    </div>
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class:"mt-8 space-y-6" }) do |f| %>
      <% if resource.errors.full_messages.present? %>
        <div id="form-error-message" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <strong class="font-bold">Error!</strong>
          <span class="block sm:inline">Please give valid details.</span>
        </div>
      <% end %>
      <div class="rounded-md">
        <div class="mb-4">
          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, 
        autofocus: true, 
        autocomplete: "email",
        placeholder:"Enter your email address",
        value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
        class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-[var(--border-clr-default)] bg-[var(--background-clr-thick)] placeholder-[var(--txt-clr-subtle)] text-[var(--txt-clr-strong)] focus:outline-none focus:ring-[var(--primary-500)] focus:border-[var(--primary-500)] focus:z-10 sm:text-sm transition duration-150 ease-in-out" %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "Resend confirmation instructions", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-[var(--txt-clr-inverted)] bg-[var(--primary-600)] hover:bg-[var(--primary-700)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--primary-500)] transition duration-150 ease-in-out" %>
      </div>
    <% end %>
    <p class="mt-6 text-center text-sm text-[var(--txt-clr-default)]">
      Don't have an account?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-[var(--primary-600)] hover:text-[var(--primary-500)] hover:underline" %>
    </p>
  </div>
</div>